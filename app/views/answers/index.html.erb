<%- model_class = Answer -%>
<div class="page-header">
  <h1>Respuestas</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>answer</th>
      <th>letter</th>
      <th>question_id</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= link_to answer.id, answer_path(answer) %></td>
        <td><%= answer.answer %></td>
        <td><%= answer.letter %></td>
        <td><%= answer.question_id %></td>
        <td><%=l answer.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_answer_path(answer), :class => 'btn btn-mini' %>

          <%= link_to 'Eliminar', answer_path(answer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nueva Respuesta', new_answer_path, :class => 'btn btn-primary' %>

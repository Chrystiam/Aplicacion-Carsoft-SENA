<%= simple_form_for(@area_center, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

  <%= f.error_notification %>
  <%= display_base_errors @area_center %>

  <%= f.input :name %>
  <%= f.input :extension %>
  <%= f.input :center_id %>
  <%= f.input :phone %>
  <%= f.input :specification %>
  <div class="form-actions">
    <%= f.submit "guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', area_centers_path, :class => 'btn btn-small' %>
  </div>
<% end %>


<%= simple_form_for(@area, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
    <%= f.error_notification %>
    <%= display_base_errors @area %>

    <p><%= f.input :name, :label => "Nombre",  :required => true  %></p>
    <p><%= f.input :description, :label => "Descripcion",  :required => true  %></p>
  	
    <div class="form-actions">
	    <%= f.submit "guardar", :class => 'btn btn-primary' %>
	    <%= link_to 'Atras', areas_path, :class => 'btn btn-small' %>
  	</div>
<% end %>

<%- model_class = Area -%>
<div class="page-header">
  <h1>Areas</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>description</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= link_to area.id, area_path(area) %></td>
        <td><%= area.name %></td>
        <td><%= area.description %></td>
        <td><%=l area.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_area_path(area), :class => 'btn btn-mini' %>

          <%= link_to 'Eliminar', area_path(area),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nueva Area', new_area_path, :class => 'btn btn-primary' %>

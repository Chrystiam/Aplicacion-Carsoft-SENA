<%= simple_form_for(@authorization, :html => { :class => 'form-horizontal' }, :remote => true)  do |f| %>

  <%= f.error_notification %>
  <%= display_base_errors @authorization %>

  <%= f.input :name %>
  <%= f.input :surname %>
  <%= f.input :genre %>
  <%= f.input :document_id %>
  <%= f.input :identification %>
  <p><%= f.label :item_description, :label => "Descripcion",  :required => true %>
       <%= f.text_area :item_description, :rows => 3 %></p>
  <%= f.input :charge %>
  <%= f.input :phone %>
  <%= f.input :avatar %>
  <%= f.input :repair %>
  <%= f.input :sample_property %>
  <%= f.input :loan %>
  <%= f.input :seminar %>
  <%= f.input :course_elements %>
  <%= f.input :others %>
  <%= f.input :date %>
  <%= f.input :acceptance %>
  <%= f.label :user_id, :label => "Usuario",  :required => true %>
            <%= f.collection_select :user_id , User.all, :id, :name, :prompt => "Seleccione Usuario"  %>
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  <div class="form-actions">
    <%= f.submit "guardar", :class => 'btn btn-primary' %>
    <a href="#" class="btn" onclick="$.lazybox.close()">Cerrar</a>
  </div>
<% end %>


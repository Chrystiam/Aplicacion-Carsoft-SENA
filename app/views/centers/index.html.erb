<%- model_class = Center -%>
<div class="page-header">
  <h1>Centros</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>code_id</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @centers.each do |center| %>
      <tr>
        <td><%= link_to center.id, center_path(center) %></td>
        <td><%= center.name %></td>
        <td><%= center.code_id %></td>
        <td><%=l center.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_center_path(center), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', center_path(center),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo Centro', new_center_path, :class => 'btn btn-primary' %>

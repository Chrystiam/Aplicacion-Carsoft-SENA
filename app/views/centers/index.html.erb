<%- model_class = Center -%>
  <div class="page-header">
    <h1>Centros de <%= @area_center.name %></h1>
  </div>
    <div class="navbar">
    <div class="navbar-inner">
    <li id='buscar' class="brand" href="#">Buscar</li> 
      <div class="row">
        <div class="span6">
          <form method="GET" class="form-inline" >
            <input id='buscar' name="buscar" class="search-query" type="text"  placeholder="Buscar" >
            <button id='buscar' type="submit" class="btn btn-primary"><i class="icon-search icon-white"></i></	   button>
          </form>
        </div>
      </div>
    </div>
  </div>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
            <th>id</th>
            <th>Nombres</th>
            <th>Codigos</th>
            <th>Area Centros</th>
            <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
       <%= render @centers %>
      </tbody>
      <tfoot>
        <tr>
               
        <td><%= link_to image_tag("participantes.png"), new_area_center_center_path, :remote => true  %> </td>
          <td><%= link_to image_tag("atras.png"), area_centers_path %></td>
        </tr>

        </tr>
      </tfoot>
      <tfoot>
          <tr>
              <td><b>Total Centros</b></td>
            <td>
                <p id='total_regs'><%= @centers.total_entries %></p>
            </td>
          </tr>
      </tfoot>
    </table>
  </div>
    </table>
      <div align="center">
        <div id="pagination" class="pagination">
          </ul>
              <%= will_paginate @centers, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente&raquo;' %>
          </ul>
        </div>
      </div>
    

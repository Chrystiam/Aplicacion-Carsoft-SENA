<%- model_class = Code -%>
<div class="page-header">
  <h1>Codigos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>code</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @codes.each do |code| %>
      <tr>
        <td><%= link_to code.id, code_path(code) %></td>
        <td><%= code.code %></td>
        <td><%=l code.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_code_path(code), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', code_path(code),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo Codigo', new_code_path, :class => 'btn btn-primary' %>

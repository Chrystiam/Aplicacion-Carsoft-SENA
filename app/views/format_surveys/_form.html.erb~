<%= simple_form_for(@format_survey, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
    <%= f.error_notification %>
    <%= display_base_errors @format_survey %>
    
    <p><%= f.input :name, :label => "Nombre",  :required => true   %></p>

    <p><%= f.label :user_id, :label => "Usuario",  :required => true   %>
        <%= f.collection_select :user_id, User.all, :id, :name %></p>

    <p><%= f.label :survey_id, :label => "Encuesta",  :required => true   %>
        <%= f.collection_select :survey_id, Survey.all, :id, :description %></p>

    <p><%= f.label :answer_id, :label => "Repuesta",  :required => true   %>
        <%= f.collection_select :answer_id, Answer.all, :id, :answer %></p>

    <p><%= f.label :question_id, :label => "Pregunta",  :required => true   %>
        <%= f.collection_select :question_id, Question.all, :id, :score %></p>

    <div class="form-actions">
      <%= f.submit "guardar", :class => 'btn btn-primary' %>
      <%= link_to 'Atras', format_surveys_path, :class => 'btn btn-small' %>
    </div>
<% end %>

<%= simple_form_for(@material, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
    <%= f.error_notification %>
    <%= display_base_errors @material %>
    <p>
       <%= f.input :name %>
    </p>
    <p>
        <%= f.input :type_material_id %>
    </p>
     <p>
       <%= f.input :user_id %>
    </p>
    
    <p>
       
      <%= f.input :description %>
    </p>
    
    <div class="form-actions">
      <%= f.submit "guardar", :class => 'btn btn-primary' %>
      <%= link_to 'Atras', materials_path, :class => 'btn btn-small' %>
    </div>
<% end %>

<%- model_class = Material -%>
<div class="page-header">
  <h1>Materiales</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>type_material_id</th>
      <th>user_id</th>
      <th>description</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= link_to material.id, material_path(material) %></td>
        <td><%= material.name %></td>
        <td><%= material.type_material_id %></td>
        <td><%= material.user_id %></td>
        <td><%= material.description %></td>
        <td><%=l material.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_material_path(material), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', material_path(material),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo Material', new_material_path, :class => 'btn btn-primary' %>

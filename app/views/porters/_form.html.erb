<%= simple_form_for(@porter, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
    
    <%= f.error_notification %>
    <%= display_base_errors @porter %>
    
    <p><%= f.input :name %></p>
    <p><%= f.input :surname %></p>
    <p><%= f.input :address %></p>
    <p><%= f.input :phone %></p>
    <p><%= f.input :turn_id %></p>
    
    <div class="form-actions">
      <%= f.submit "guardar", :class => 'btn btn-primary' %>
      <%= link_to 'Atras', porters_path, :class => 'btn btn-small' %>
    </div>
<% end %>

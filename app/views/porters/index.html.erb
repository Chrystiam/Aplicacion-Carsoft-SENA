<%- model_class = Porter -%>
<div class="page-header">
  <h1>Porteros</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>surname</th>
      <th>address</th>
      <th>phone</th>
      <th>turn_id</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @porters.each do |porter| %>
      <tr>
        <td><%= link_to porter.id, porter_path(porter) %></td>
        <td><%= porter.name %></td>
        <td><%= porter.surname %></td>
        <td><%= porter.address %></td>
        <td><%= porter.phone %></td>
        <td><%= porter.turn_id %></td>
        <td><%=l porter.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_porter_path(porter), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', porter_path(porter),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo Portero', new_porter_path, :class => 'btn btn-primary' %>

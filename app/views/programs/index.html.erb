<%- model_class = Program -%>
<div class="page-header">
  <h1>Programas</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>center_id</th>
      <th>description</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= link_to program.id, program_path(program) %></td>
        <td><%= program.name %></td>
        <td><%= program.center_id %></td>
        <td><%= program.description %></td>
        <td><%=l program.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_program_path(program), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', program_path(program),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo Programa', new_program_path, :class => 'btn btn-primary' %>

<%- model_class = Question -%>
<div class="page-header">
  <h1>Preguntas</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>description</th>
      <th>score</th>
      <th>letter</th>
      <th>category_id</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.id, question_path(question) %></td>
        <td><%= question.description %></td>
        <td><%= question.score %></td>
        <td><%= question.letter %></td>
        <td><%= question.category_id %></td>
        <td><%=l question.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_question_path(question), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', question_path(question),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nueva Pregunta', new_question_path, :class => 'btn btn-primary' %>

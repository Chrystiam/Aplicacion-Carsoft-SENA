<%= simple_form_for @record, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :date %>
  <%= f.input :time %>
  <%= f.input :amount %>
  <%= f.input :movements %>
  <%= f.input :destination %>
  <%= f.input :center_id %>
  <%= f.input :provenance %>
  <%= f.input :vehicle_id %>
  <%= f.input :porter_id %>
  <%= f.input :material_id %>
  <%= f.input :user_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                records_path, :class => 'btn' %>
  </div>
<% end %>

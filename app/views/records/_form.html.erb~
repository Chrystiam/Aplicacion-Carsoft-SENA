<%= simple_form_for(@record, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
    
    <%= f.error_notification %>
    <%= display_base_errors @record %>
    
    <p><%= f.input :date, :label => "Fecha",  :required => true  %></p>
    <p><%= f.input :time, :label => "	Hora",  :required => true  %></p>
    <p><%= f.input :amount, :label => "Cantidad",  :required => true  %></p>
    <p><%= f.input :movements, :label => "Movimiento",  :required => true  %></p>
    <p><%= f.input :destination, :label => "Destino",  :required => true  %></p>
    <p><%= f.input :provenance, :label => "Procedencia",  :required => true  %></p>
    
    <p><%= f.label :center_id, :label => "Centro",  :required => true   %>
    	<%= f.collection_select :center_id, Center.all, :id, :name %></p>
    	
    	 <p><%= f.label :vehicle_id, :label => "Vehiculo",  :required => true   %>
    	<%= f.collection_select :vehicle_id, Vehicle.all, :id, :plate %></p>
    	
    	 <p><%= f.label :porter_id, :label => "Portero",  :required => true   %>
    	<%= f.collection_select :porter_id,  Porter.all, :id, :name %></p>
    	
    	<p><%= f.label :material_id, :label => "Material",  :required => true   %>
    	<%= f.collection_select :material_id, Material.all, :id, :name %></p>
    	
    	 <p><%= f.label :user_id , :label => "Usuario",  :required => true   %>
    	<%= f.collection_select :user_id, User.all, :id, :name %></p>
    	
    	 <p><%= f.label :team_id, :label => "Equipo",  :required => true   %>
    	<%= f.collection_select :team_id,  Team.all, :id, :name %></p>
    	
  
  
    <div class="form-actions">
      <%= f.submit "guardar", :class => 'btn btn-primary' %>
      <%= link_to 'Atras', records_path, :class => 'btn btn-small' %>
    </div>
<% end %>

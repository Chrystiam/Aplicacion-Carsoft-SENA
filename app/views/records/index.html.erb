<%- model_class = Record -%>
  <div class="page-header">
    <h1>Registros</h1>
  </div>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
            <th>Id</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Cantidad</th>
            <th>Movimientos</th>
            <th>Destino</th>
            <th>procedencia</th>
            <th>Centros</th>
            <th>Vehiculos</th>
            <th>Porteros</th>
            <th>Materiales</th>
            <th>Usuarios</th>
            <th>Equipos</th>
        </tr>
      </thead>
      <tbody>
       <%= render @records %>
      </tbody>
      <tfoot>
        <tr>
          <td><%= link_to image_tag('nuevo.png', :tile  => "Mostrar Equipos"),  new_record_path,  :remote => true %></td>
        </tr>
      </tfoot>
    </table>
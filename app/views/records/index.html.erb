<%- model_class = Record -%>
<div class="page-header">
  <h1>Registros</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>date</th>
      <th>time</th>
      <th>amount</th>
      <th>movements</th>
      <th>destination</th>
      <th>center_id</th>
      <th>provenance</th>
      <th>vehicle_id</th>
      <th>porter_id</th>
      <th>material_id</th>
      <th>user_id</th>
      <th>team_id</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= link_to record.id, record_path(record) %></td>
        <td><%= record.date %></td>
        <td><%= record.time %></td>
        <td><%= record.amount %></td>
        <td><%= record.movements %></td>
        <td><%= record.destination %></td>
        <td><%= record.center_id %></td>
        <td><%= record.provenance %></td>
        <td><%= record.vehicle_id %></td>
        <td><%= record.porter_id %></td>
        <td><%= record.material_id %></td>
        <td><%= record.user_id %></td>
        <td><%= record.team_id %></td>
        <td><%=l record.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_record_path(record), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', record_path(record),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo Registro', new_record_path, :class => 'btn btn-primary' %>

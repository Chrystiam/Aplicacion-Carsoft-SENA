<%= simple_form_for(@result, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
    <%= f.error_notification %>
    <%= display_base_errors @result %>

  <p><%= f.input :answer_id, :label => "Repuestas",  :required => true %></p>
  <p><%= f.input :question_id, :label => "Pregunta",  :required => true %></p>
  <p><%= f.input :user_id, :label => "Usuario",  :required => true %></p>
  <p><%= f.input :ok, :label => "Ok",  :required => true %></p>
    
  <div class="form-actions">
    <%= f.submit "guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', results_path, :class => 'btn btn-small' %>
  </div>
<% end %>

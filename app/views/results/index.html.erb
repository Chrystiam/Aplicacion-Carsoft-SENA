<%- model_class = Result -%>
<div class="page-header">
  <h1>Resultados</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>answer_id</th>
      <th>question_id</th>
      <th>user_id</th>
      <th>ok</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= link_to result.id, result_path(result) %></td>
        <td><%= result.answer_id %></td>
        <td><%= result.question_id %></td>
        <td><%= result.user_id %></td>
        <td><%= result.ok %></td>
        <td><%=l result.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_result_path(result), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', result_path(result),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo Resultado', new_result_path, :class => 'btn btn-primary' %>

<%= simple_form_for(@rh, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
    <%= f.error_notification %>
    <%= display_base_errors @rh %>

    <p><%= f.input :name, :label => "Nombre",  :required => true %></p>
      	
    <div class="form-actions">
	    <%= f.submit "guardar", :class => 'btn btn-primary' %>
	    <%= link_to 'Atras', rhs_path, :class => 'btn btn-small' %>
  	</div>
<% end %>

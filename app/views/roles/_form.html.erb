<%= simple_form_for(@role, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
    <%= f.error_notification %>
    <%= display_base_errors @role %>

   <p><%= f.input :name, :label => "Nombre",  :required => true   %></p>
   <p><%= f.input :acronym, :label => "Sigla",  :required => true   %></p>
     	
    <div class="form-actions">
	    <%= f.submit "guardar", :class => 'btn btn-primary' %>
	    <%= link_to 'Atras', roles_path, :class => 'btn btn-small' %>
  	</div>
<% end %>

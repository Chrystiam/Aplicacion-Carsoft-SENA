<%- model_class = Role -%>
  <div class="page-header">
    <h1>Roles</h1>
  </div>
    <div class="navbar">
    <div class="navbar-inner">
    <li id='buscar' class="brand" href="#">Buscar</li> 
      <div class="row">
        <div class="span6">
          <form method="GET" class="form-inline" >
            <input id='buscar' name="buscar" class="search-query" type="text"  placeholder="Buscar" >
            <button id='buscar' type="submit" class="btn btn-primary"><i class="icon-search icon-white"></i></button>
          </form>
        </div>
      </div>
    </div>
  </div>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>id</th>
          <th>Nombres</th>
          <th>Siglas</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
       <%= render @roles %>
      </tbody>
      <tfoot>
        <tr>
          <td><%= link_to image_tag('nuevo.png', :tile  => "Mostrar Equipos"),  new_role_path,  :remote => true %></td>
        </tr>
      </tfoot>
      <tfoot>
          <tr>
              <td><b>Total Roles </b></td>
            <td>
                <p id='total_regs'><%= @roles.total_entries %></p>
            </td>
          </tr>
      </tfoot>
    </table>
  </div>
    </table>
      <div align="center">
        <div id="pagination" class="pagination">
          </ul>
              <%= will_paginate @roles, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente&raquo;' %>
          </ul>
        </div>
      </div>


<tr id=<%= "rol_#{rol.id}" %>>
    <td><%= link_to rol.id, edit_rol_path(rol), :remote => true %></td>
    <td><%= rol.name %></td>
    <td><%= rol.acronym %></td>
    <td>
        <%= link_to  image_tag('mostrar.png'), rol,     :remote => true, :class => 'btn btn-mini' %>
        <%= link_to image_tag('editar1.png', :title => "Editar Equipos"), edit_rol_path(rol),  :remote => true,
          :class => 'btn btn-mini'%>
        <%= link_to image_tag('eliminar.png', :title => "Eliminar Equipos"), rol, :data => { :confirm => 'Esta Seguro?' },
          :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger' %>
    </td>
</tr>
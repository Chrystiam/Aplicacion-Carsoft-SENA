<%- model_class = Rol -%>
<div class="page-header">
  <h1>Roles</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>acronym</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @rols.each do |rol| %>
      <tr>
        <td><%= link_to rol.id, rol_path(rol) %></td>
        <td><%= rol.name %></td>
        <td><%= rol.acronym %></td>
        <td><%=l rol.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_rol_path(rol), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', rol_path(rol),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo Rol', new_rol_path, :class => 'btn btn-primary' %>

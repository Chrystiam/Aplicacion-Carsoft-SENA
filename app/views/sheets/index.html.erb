<%- model_class = Sheet -%>
<div class="page-header">
  <h1>Fichas</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>code</th>
      <th>program_id</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @sheets.each do |sheet| %>
      <tr>
        <td><%= link_to sheet.id, sheet_path(sheet) %></td>
        <td><%= sheet.code %></td>
        <td><%= sheet.program_id %></td>
        <td><%=l sheet.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_sheet_path(sheet), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', sheet_path(sheet),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nueva Ficha', new_sheet_path, :class => 'btn btn-primary' %>

<tr id=<%= "suggestion_#{suggestion.id}" %>>
    <td><%= link_to suggestion.id, edit_suggestion_path(suggestion), :remote => true %></td>
    <td><%= suggestion.name %></td>
    <td><%= suggestion.surname %></td>
    <td><%= suggestion.document.name %></td>
    <td><%= suggestion.number_identification %></td>
    <td><%= suggestion.phone %></td>
    <td><%= suggestion.movil %></td>
    <td><%= suggestion.suggestion %></td>
    <td>
        <%= link_to  image_tag('mostrar.png'), suggestion, :remote => true,  :rel => "tooltip", :title => "Mostrar", :class => 'btn btn-mini'%>
        <%= link_to image_tag('editar1.png'), edit_suggestion_path(suggestion),  :remote => true,  :rel => "tooltip", :title => "Editar", :class => 'btn btn-mini'%>
        <%= link_to image_tag('eliminar.png', :title => "Eliminar Equipos"), suggestion, :data => { :confirm => 'Esta Seguro?' },
          :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger' %>
    </td>
</tr>
<%- model_class = Suggestion -%>
  <div class="page-header">
    <h1>Sugerencias</h1>
  </div>
    <div class="navbar">
    <div class="navbar-inner">
    <li id='buscar' class="brand" href="#">Buscar</li> 
      <div class="row">
        <div class="span6">
          <form method="GET" class="form-inline" >
            <input id='buscar' name="buscar" class="search-query" type="text"  placeholder="Buscar" >
             <a  rel="tooltip" title="Ingresar datos dar Click"><button id='buscar' type="submit" class="btn btn-primary"><i class="icon-search icon-white"></i></button></a>
          </form>
        </div>
      </div>
    </div>
  </div>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>id</th>
          <th>Nombres</th>
          <th>Apellidos</th>
          <th>Tipo Documentos</th>
          <th>Numero identidad</th>
          <th>Telefonos</th>
          <th>Celulares</th>
          <th>Sugerencias</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
       <%= render @suggestions %>
      </tbody>
      <tfoot>
        <tr>
          <td><%= link_to image_tag('nuevosugerencia.png',),  new_suggestion_path,  :remote => true, :rel => "tooltip", :title => "Ingresar Sugerencias", :class => "btn btn-mini " %></td>
        </tr>
      </tfoot>
      <tfoot>
          <tr>
              <td><b>Total Sugerencias</b></td>
            <td>
                <p id='total_regs'><%= @suggestions.total_entries %></p>
            </td>
          </tr>
      </tfoot>
    </table>
  </div>
    </table>
      <div align="center">
        <div id="pagination" class="pagination">
          </ul>
              <%= will_paginate @suggestions, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente&raquo;' %>
          </ul>
        </div>
      </div>

<%= simple_form_for(@survey, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
    <%= f.error_notification %>
    <%= display_base_errors @survey %>

     <p><%= f.label :user_id , :label => "Usuario",  :required => true   %>
    	<%= f.collection_select :user_id, User.all, :id, :name %></p>
  	<p><%= f.input :description, :label => "Descripcion",  :required => true   %></p> 	
  	
    <div class="form-actions">
	    <%= f.submit "guardar", :class => 'btn btn-primary' %>
	    <%= link_to 'Atras', surveys_path, :class => 'btn btn-small' %>
  	</div>
<% end %>

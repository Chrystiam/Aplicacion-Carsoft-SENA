<tr id=<%= "survey_#{survey.id}" %>>
    <td><%= link_to survey.id, edit_survey_path(survey), :remote => true %></td>
    <td><%= survey.user_id %></td>
    <td><%= survey.description %></td>
    <td>
        <%= link_to  image_tag('mostrar.png'), survey,     :remote => true, :class => 'btn btn-mini' %>
        <%= link_to image_tag('editar1.png', :title => "Editar Equipos"), edit_survey_path(survey),  :remote => true,
          :class => 'btn btn-mini'%>
        <%= link_to image_tag('eliminar.png', :title => "Eliminar Equipos"), survey, :data => { :confirm => 'Esta Seguro?' },
          :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger' %>
    </td>
</tr>
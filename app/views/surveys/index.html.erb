<%- model_class = Survey -%>
<div class="page-header">
  <h1>Encuestas</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>user_id</th>
      <th>description</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= link_to survey.id, survey_path(survey) %></td>
        <td><%= survey.user_id %></td>
        <td><%= survey.description %></td>
        <td><%=l survey.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_survey_path(survey), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', survey_path(survey),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nueva Encuesta', new_survey_path, :class => 'btn btn-primary' %>

<%= simple_form_for(@team, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
    <%= f.error_notification %>
    <%= display_base_errors @team %>

    <p><%= f.input :name, :label => "Nombre",  :required => true   %></p>
    <p><%= f.input :serial, :label => "Serial",  :required => true   %></p>
    <p><%= f.input :color, :label => "Color",  :required => true   %></p>
     <p><%= f.label :type_material_id, :label => "Material",  :required => true   %>
        <%= f.collection_select :type_material_id, TypeMaterial.all, :id, :name %></p>
   <p><%= f.label :porter_id, :label => "Portero",  :required => true   %>
    	<%= f.collection_select :porter_id,  Porter.all, :id, :name %></p>
    <p><%= f.label :user_id , :label => "Usuario",  :required => true   %>
    	<%= f.collection_select :user_id, User.all, :id, :name %></p>
    	<p><%= f.input :mouse, :label => "Mouse",  :required => true   %></p>
    <p><%= f.input :charger, :label => "Cargador",  :required => true   %></p>
    
    <div class="form-actions">
      <%= f.submit "guardar", :class => 'btn btn-primary' %>
      <%= link_to 'Atras', teams_path, :class => 'btn btn-small' %>
    </div>
<% end %>

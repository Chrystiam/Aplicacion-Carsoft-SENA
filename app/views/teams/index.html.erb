<%- model_class = Team -%>
<div class="page-header">
  <h1>Equipo</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>type_team</th>
      <th>name</th>
      <th>serial</th>
      <th>mouse</th>
      <th>charger</th>
      <th>color</th>
      <th>porter_id</th>
      <th>user_id</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to team.id, team_path(team) %></td>
        <td><%= team.type_team %></td>
        <td><%= team.name %></td>
        <td><%= team.serial %></td>
        <td><%= team.mouse %></td>
        <td><%= team.charger %></td>
        <td><%= team.color %></td>
        <td><%= team.porter_id %></td>
        <td><%= team.user_id %></td>
        <td><%=l team.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_team_path(team), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', team_path(team),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo Equipo', new_team_path, :class => 'btn btn-primary' %>

<tr id=<%= "turn_#{turn.id}" %>>
    <td><%= link_to turn.id, edit_turn_path(turn), :remote => true %></td>
    <td><%= turn.date %></td>
    <td>
        <%= link_to  image_tag('mostrar.png'), turn,     :remote => true, :class => 'btn btn-mini' %>
        <%= link_to image_tag('editar1.png', :title => "Editar Equipos"), edit_turn_path(turn),  :remote => true,
          :class => 'btn btn-mini'%>
        <%= link_to image_tag('eliminar.png', :title => "Eliminar Equipos"), turn, :data => { :confirm => 'Esta Seguro?' },
          :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger' %>
    </td>
</tr>
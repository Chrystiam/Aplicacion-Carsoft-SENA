<%- model_class = Turn -%>
<div class="page-header">
  <h1>Turnos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>date</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @turns.each do |turn| %>
      <tr>
        <td><%= link_to turn.id, turn_path(turn) %></td>
        <td><%= turn.date %></td>
        <td><%=l turn.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_turn_path(turn), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', turn_path(turn),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo Turno', new_turn_path, :class => 'btn btn-primary' %>

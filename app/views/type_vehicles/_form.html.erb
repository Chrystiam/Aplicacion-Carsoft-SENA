<%= simple_form_for @type_vehicle, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.error_notification %>
  <%= display_base_errors @type_vehicle %>

  <%= f.input :name %>
  <%= f.input :description %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                type_vehicles_path, :class => 'btn' %>
  </div>
<% end %>

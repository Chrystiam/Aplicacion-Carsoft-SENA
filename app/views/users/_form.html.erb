<%= simple_form_for(@user, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
    <%= f.error_notification %>
    <%= display_base_errors @user %>
  
<%= f.input :type_id %>
  <div class="row-fluid">
  <div class="span12">
        <div class="row-fluid">
          <div class="span6"><%= f.input :name %></div>
          <div class="span6"><%= f.input :surname %></div>
        </div>
         <div class="row-fluid">
          <div class="span6"><%= f.input :finger_print %></div>
          <div class="span6"><%= f.input :identification %></div>
       
        </div>
         <div class="row-fluid">
          <div class="span6"><%= f.input :key %></div>
          <div class="span6"><%= f.input :email %></div>
        </div>
         <div class="row-fluid">
          <div class="span6"><%= f.input :address_residence %></div>
          <div class="span6"><%= f.input :phone %></div>
        </div>
            <div class="row-fluid">
          <div class="span6"><%= f.input :movil %></div>
          <div class="span6"><%= f.input :document_id %></div>
        </div>
            <div class="row-fluid">
          <div class="span6"><%= f.input :rh_id %></div>
          <div class="span6"><%= f.input :role_id %></div>
        </div>
          <div class="row-fluid">
          <div class="span6"> <%= f.input :male %></div>
          <div class="span6"><%= f.input :female %></div>

        </div>
      </div>
    </div>
  </div>
</div>
  
    
    <div class="form-actions">
      <%= f.submit "guardar", :class => 'btn btn-primary' %>
      <%= link_to 'Atras', users_path, :class => 'btn btn-small' %>
    </div>
<% end %>

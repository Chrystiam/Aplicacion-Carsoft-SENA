<%= simple_form_for(@user, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
    <%= f.error_notification %>
    <%= display_base_errors @user %>

  <div class="row-fluid">
  <div class="span12">
      <div class="row-fluid">
          <div class="span6"><%= f.label :type_user_id, :label => "Tipo Usuario",  :required => true %>
             <%= f.collection_select :type_user_id, TypeUser.all, :id, :name, :prompt => "Tipo Usuarios"   %></div>
       <div class="span6"><%= f.input :phone, :label => "Telefono",  :required => true  %></div>

        </div>
        <div class="row-fluid">
          <div class="span6"><%= f.input :name, :label => "Nombre",  :required => true  %></div>
          <div class="span6"><%= f.input :movil, :label => "Celular",  :required => true  %></div>
        </div>
         <div class="row-fluid">
          <div class="span6"><%= f.input :surname, :label => "Apellido",  :required => true  %></div>

         <div class="span6"><%= f.label :rh_id, :label => "Rh",  :required => true %>
           <%= f.collection_select :rh_id , Rh.all, :id, :name, :prompt => "Selecion Rhs"   %>
          </div>

        </div>
       
        </div>
         <div class="row-fluid">
           <div class="span6"><%= f.input :female, :as => :radio, :label => "Genero", :collection => [["Masculino", false], ["Femenino", true]] %></div>
 <div class="span6"><%= f.input :email, :label => "email",  :required => true  %></div>
        </div>
         <div class="row-fluid">
           <div class="span6"><%= f.label :document_id, :label => "Documento",  :required => true %>
            <%= f.collection_select :document_id , Document.all, :id, :name, :prompt => "Tipo Documentos"  %>
          </div>
         
         <div class="span6"><%= f.input :key, :label => "Password",  :required => true %></div>
        </div>
            <div class="row-fluid">

           <div class="span6"><%= f.input :identification, :label => "Identidad",  :required => true  %></div>

        </div>
         <div class="row-fluid">
           <div class="span6"><%= f.input :responsible_name, :url => autocomplete_responsible_name_users_path, :as => :autocomplete, :id_element => '#id' %>
        </div>
               
          
          <div class="span6"><%= f.label :rol_id, :label => "Roles",  :required => true %>
             <%= f.collection_select :rol_id , Rol.all, :id, :name, :prompt => "Selecion Rol"   %>
          </div>
        </div>
            <div class="row-fluid">
         <div class="span6"><%= f.input :address_residence, :label => "Direccion",  :required => true  %></div>
          <div class="span6"><%= f.input :finger_print %></div>
        </div>
      </div>
    </div>
  </div>
</div>  
    <div class="form-actions">
      <%= f.submit "guardar", :class => 'btn btn-primary' %>
      <%= link_to 'Atras', users_path, :class => 'btn btn-small ' %>
    </div>
<% end %>

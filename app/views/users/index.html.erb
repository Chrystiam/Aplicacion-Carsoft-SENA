<%- model_class = User -%>

  <div id='admin1' class="page-header">
    <h1>Usuarios</h1>
     <div class="navbar">
    <div class="navbar-inner">
    <li id='buscar' class="brand" href="#">Buscar</li> 
      <div class="row">
        <div class="span6">
          <form method="GET" class="form-inline" >
            <input id='buscar' name="buscar" class="search-query" type="text"  placeholder="Buscar" >
           <a  rel="tooltip" title="Ingresar datos a buscar"><button id='buscar' type="submit" class="btn btn-primary btn-mini"><i class="icon-search icon-white"></i></button></a> 
          </form>
        </div>
      </div>
    </div>
  </div>
  <div id="pdf"><%= link_to  image_tag('pdf.png'), users_path(:format => :pdf), :class => 'btn btn-mini', :rel => "tooltip", :title => "Imprimir Registreos" %></div>
  </div>

    <table class="table table-hover"  >
      <thead>
        <tr >
          <th class="fondo">id</th>
          <th class="fondo">Nombre</th>
          <th class="fondo">Identificacion</th>
          <th class="fondo">Direccion</th>
          <th class="fondo">Telefono</th>
          <th class="fondo">Celular</th>
          <th class="fondo"></th>
          <th class="fondo">Acciones</th>
          
        </tr>
      </thead>
      <tbody>
       <%= render @users %>
      </tbody>
      <tfoot>
        <tr>
          <td><%= link_to image_tag('nuevo.png', :tile  => "Mostrar Equipos"),  new_user_path,  :remote => true %></td>
        </tr>
      </tfoot>
      <tfoot>
          <tr>
              <td><b>Total Usuarios:</b></td>
            <td>
                <input type="text"  id="totalregs" class="span1" value="<%= @users.total_entries %>" readonly />
            </td>
          </tr>
      </tfoot>
    </table>
  
      <div align="center">
        <div id="pagination" class="pagination">
          </ul>
              <%= will_paginate @users, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente&raquo;' %>
          </ul>
        </div>
      </div>



<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:surname) %>:</strong></dt>
  <dd><%= @user.surname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:finger_print) %>:</strong></dt>
  <dd><%= @user.finger_print %></dd>
  <dt><strong><%= model_class.human_attribute_name(:male) %>:</strong></dt>
  <dd><%= @user.male %></dd>
  <dt><strong><%= model_class.human_attribute_name(:female) %>:</strong></dt>
  <dd><%= @user.female %></dd>
  <dt><strong><%= model_class.human_attribute_name(:identification) %>:</strong></dt>
  <dd><%= @user.identification %></dd>
  <dt><strong><%= model_class.human_attribute_name(:key) %>:</strong></dt>
  <dd><%= @user.key %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_residence) %>:</strong></dt>
  <dd><%= @user.address_residence %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @user.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:movil) %>:</strong></dt>
  <dd><%= @user.movil %></dd>
  <dt><strong><%= model_class.human_attribute_name(:document_id) %>:</strong></dt>
  <dd><%= @user.document_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rh_id) %>:</strong></dt>
  <dd><%= @user.rh_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role_id) %>:</strong></dt>
  <dd><%= @user.role_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type_id) %>:</strong></dt>
  <dd><%= @user.type_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

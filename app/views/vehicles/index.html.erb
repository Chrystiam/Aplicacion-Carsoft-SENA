<%- model_class = Vehicle -%>
<div class="page-header">
  <h1>Vehiculos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>plate</th>
      <th>color</th>
      <th>brand</th>
      <th>model</th>
      <th>type_vehicle_id</th>
      <th>user_id</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= link_to vehicle.id, vehicle_path(vehicle) %></td>
        <td><%= vehicle.plate %></td>
        <td><%= vehicle.color %></td>
        <td><%= vehicle.brand %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.type_vehicle_id %></td>
        <td><%= vehicle.user_id %></td>
        <td><%=l vehicle.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_vehicle_path(vehicle), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', vehicle_path(vehicle),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo Vehiculo', new_vehicle_path, :class => 'btn btn-primary' %>
